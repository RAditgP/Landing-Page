generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Template {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String
  tag         String?
  image       String?
  demoUrl     String?
  useUrl      String?
  createdAt   DateTime @default(now())
}
model Transaction {
  id        Int      @id @default(autoincrement())
  nama      String
  email     String
  paket     String
  harga     String
  metode    String
  createdAt DateTime @default(now())
}
model PesanKontak {
  id           String    @id @default(uuid()) // ID unik untuk pesan
  namaLengkap  String
  alamatEmail  String
  pesanAnda    String
  dibaca       Boolean   @default(false) // Status pesan, apakah sudah dibaca admin
  dikirimPada  DateTime  @default(now()) // Waktu pengiriman
}
model users {
  id        Int      @id @default(autoincrement()) // ID unik, otomatis bertambah
  email     String   @unique // Email harus unik untuk setiap pengguna
  name      String
  password  String // Simpan hash password, BUKAN password plain-text
  createdAt DateTime @default(now()) // Waktu pembuatan pengguna
  updatedAt DateTime @updatedAt // Waktu pembaruan terakhir
}