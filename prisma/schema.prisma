generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model PesanKontak {
  id          String   @id
  namaLengkap String
  alamatEmail String
  pesanAnda   String
  dibaca      Boolean  @default(false)
  dikirimPada DateTime @default(now())

  @@map("pesankontak")
}

model Template {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String
  tag         String?
  image       String?
  demoUrl     String?
  useUrl      String?
  createdAt   DateTime @default(now())

  @@map("template")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  nama      String
  email     String
  paket     String
  harga     String
  metode    String
  createdAt DateTime @default(now())

  @@map("transaction")
}

model users {
  id        Int        @id @default(autoincrement())
  email     String?    @unique(map: "User_email_key") @db.VarChar(100)
  name      String?
  password  String?    @db.VarChar(255)
  updatedAt DateTime?  @default(now())
  createdAt DateTime   @default(now())
  sessions  sessions[]
}

model sessions {
  id         Int      @id @default(autoincrement())
  user_id    Int
  token      String   @unique(map: "Session_token_key") @db.VarChar(255)
  expires_at DateTime
  created_at DateTime @default(now())
  users      users    @relation(fields: [user_id], references: [id], map: "Session_user_id_fkey")

  @@index([user_id], map: "Session_user_id_idx")
}
